<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agent.ImporterFichier">

    <!-- Titre de l'activité -->
    <TextView
        android:id="@+id/tv_import_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importer un fichier"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center" />

    <!-- Bouton pour sélectionner un fichier -->
    <Button
        android:id="@+id/btn_choisir_fichier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisir un fichier"
        app:layout_constraintTop_toBottomOf="@id/tv_import_titre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp" />

    <!-- TextView pour afficher le chemin du fichier sélectionné -->
    <TextView
        android:id="@+id/tv_fichier_chemin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aucun fichier sélectionné"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_choisir_fichier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center" />

    <!-- Bouton pour traiter le fichier -->
    <Button
        android:id="@+id/btn_traiter_fichier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traiter le fichier"
        app:layout_constraintTop_toBottomOf="@id/tv_fichier_chemin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
