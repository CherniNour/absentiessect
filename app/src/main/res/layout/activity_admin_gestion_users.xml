<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestion des Utilisateurs"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!--  Liste des enseignants -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnListeEnseignants"
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Liste des enseignants"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@color/teal_700"/>
    </androidx.cardview.widget.CardView>

    <!-- Liste des agents -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnListeAgents"
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnListeEnseignants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Liste des agents"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@color/purple_500"/>
    </androidx.cardview.widget.CardView>

    <!-- Ajouter un utilisateur -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnAjouterUser"
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnListeAgents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ajouter un utilisateur"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@color/orange_700"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>